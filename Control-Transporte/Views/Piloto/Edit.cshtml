@model Control_Transporte.Models.EmpleadoModel

@{
    ViewBag.Title = "Edit";
    List<SelectListItem> listaTipo = ViewBag.ListaTipos;
}

<h2>Editar Empleado</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.iidPiloto, htmlAttributes: new { @class = "control-label col-md-2" })
