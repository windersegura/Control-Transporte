@model IEnumerable<Control_Transporte.Models.VehiculoModel>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Vehiculos</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create", null ,new {  @class = "btn btn-primary"  })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.iidVehiculo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.capacidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.consumo_combustible)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.costo_depreciacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.modelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre_piloto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipo_vehiculo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.iidVehiculo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.capacidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.consumo_combustible)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.costo_depreciacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.modelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre_piloto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipo_vehiculo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.iidVehiculo  } , new { @class = "btn btn-warning"}) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.iidVehiculo  }, new { @class = "btn btn-danger"})
        </td>
    </tr>
}

</table>
